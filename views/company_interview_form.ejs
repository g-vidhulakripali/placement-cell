<div class="container">
    <form class="w-60 mx-auto mt-4" action="/company/create" method="POST"
        id="company-form">
        <%- include('partials/_back_company'); %>
        <h3 style="margin-bottom: 50px; color: black;">Schedule Interview</h3>

        <div class="mb-3">
            <label for="name" class="form-label">Name:</label>
            <select class="form-select" aria-label="Default select example" name="id" id="name">
                <option selected disabled>Select Student</option>

                <%for(let student of students){%>
                    <option value="<%=student.id%>">
                        <%= student.name %>
                    </option>
                    <%}%>
            </select></select>
        </div>

        <div class="mb-3">
            <label for="company" class="form-label">Company:</label>
            <input type="text" class="form-control" id="company" name="company" required />
        </div>

        <div class="mb-3">
            <label for="date" class="form-label">Date:</label>
            <input type="date" class="form-control" id="date" name="date" required/>
        </div>

        <button class="btn btn-success align-self-center">
            Schedule Interview
        </button>
    </form>
</div>